.dropdown.notification-dropdown
	%button.btn.btn-default.dropdown-toggle{class: "btn btn-info" ,type: 'button', id:'dropdownMenu1', data: { toggle: 'dropdown' }, 'aria-haspopup': true,'aria-expanded': true }
		= current_user.notifications.where(read: false).count
		%span.glyphicon.glyphicon-globe
	%ul.dropdown-menu{ 'aria-labelledby': 'dropdownMenu1' }
		%li.dropdown-header.text-center Notifications
		= render current_user.notifications.order('created_at DESC').first(5)
		%li.divider{ role: 'separator' }
		%li.text-center= link_to 'View All', notifications_path